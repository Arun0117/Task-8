import java.util.*;

class Question {
    String questionText;
    String[] options;
    int correctAnswerIndex; // 0-based index

    public Question(String questionText, String[] options, int correctAnswerIndex) {
        this.questionText = questionText;
        this.options = options;
        this.correctAnswerIndex = correctAnswerIndex;
    }

    public boolean isCorrect(int userChoice) {
        return userChoice == correctAnswerIndex;
    }
}

public class OnlineQuizApp {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Create questions
        List<Question> questions = new ArrayList<>();
        questions.add(new Question("Which language is used for Android development?",
                new String[]{"Python", "Java", "C++", "Ruby"}, 1));
        questions.add(new Question("Which planet is known as the Red Planet?",
                new String[]{"Earth", "Mars", "Venus", "Jupiter"}, 1));
        questions.add(new Question("What is 5 + 7?",
                new String[]{"10", "11", "12", "13"}, 2));

        int score = 0;

        System.out.println("=== Welcome to the Online Quiz App ===\n");

        // Loop through each question
        for (int i = 0; i < questions.size(); i++) {
            Question q = questions.get(i);
            System.out.println("Q" + (i + 1) + ": " + q.questionText);

            for (int j = 0; j < q.options.length; j++) {
                System.out.println((j + 1) + ". " + q.options[j]);
            }

            System.out.print("Enter your choice (1-" + q.options.length + "): ");
            int choice = scanner.nextInt() - 1;

            if (q.isCorrect(choice)) {
                System.out.println("✅ Correct!\n");
                score++;
            } else {
                System.out.println("❌ Wrong! The correct answer was: " +
                        q.options[q.correctAnswerIndex] + "\n");
            }
        }

        System.out.println("=== Quiz Finished ===");
        System.out.println("Your Score: " + score + "/" + questions.size());

        scanner.close();
    }
}
